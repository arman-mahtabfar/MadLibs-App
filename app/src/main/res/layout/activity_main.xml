<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#979797"
    android:windowSoftInputMode="adjustResize"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/newSong"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:windowSoftInputMode="adjustResize"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/mybautton"
        android:text="Generate Quote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@android:color/background_light" />

    <Button
        android:id="@+id/madlib"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:windowSoftInputMode="adjustResize"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mybautton"
        android:text="Part of Speech"
        app:layout_constraintStart_toEndOf="@+id/newSong"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:background="@android:color/background_light" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="363dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        android:windowSoftInputMode="adjustResize"
        android:autofillHints="@string/words"
        android:background="@drawable/more"
        android:ems="10"
        android:hint="@string/words"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="362dp"
        android:layout_height="280dp"
        android:layout_margin="16dp"
        android:windowSoftInputMode="adjustResize"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/more"
        android:text="@string/q"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/newSong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="278dp"
        android:layout_height="69dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:windowSoftInputMode="adjustResize"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover" />

    <Button
        android:id="@+id/ShowQuote"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:windowSoftInputMode="adjustResize"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/mybautton"
        android:text="MadLib It!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toEndOf="@+id/madlib"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:background="@android:color/background_light" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="363dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:windowSoftInputMode="adjustResize"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:background="@drawable/more"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.592" />

</android.support.constraint.ConstraintLayout>